<Window x:Class="LangTools.LangWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangTools"
        mc:Ignorable="d"
        Title="Languages" Height="400" Width="400">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Add Language" Width="110" Margin="0,0,10,0"/>
            <Button Content="Remove Language" Width="110"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TextBox x:Name="langEdit" TextWrapping="Wrap" Width="120"/>
            <TextBox x:Name="folderEdit" TextWrapping="Wrap" Width="120"/>
            <Button Content="..." />
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Label Content="New language"/>
            <Label Content="Folder"/>
        </StackPanel>
        <DataGrid x:Name="languagesGrid"/>
    </DockPanel>
</Window>
